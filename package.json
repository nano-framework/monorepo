{
  "name": "nano-monorepo",
  "version": "0.0.1",
  "main": "index.js",
  "author": "luis@nxtep.io",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "./packages/*"
  ],
  "engines": {
    "node": ">=10",
    "yarn": ">=1.16"
  },
  "scripts": {
    "lint": "eslint packages/**/{lib,bin,examples,__tests__}/*.ts packages/**/{lib,bin,examples,__tests__}/**/*.ts",
    "build": "lerna run build",
    "bootstrap": "lerna bootstrap && yarn run -s build",
    "clean": "lerna run clean",
    "postclean": "lerna clean -y",
    "test": "jest --config jest.json",
    "precommit": "lerna run --concurrency 1 --stream precommit --since HEAD"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run precommit",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook"
    }
  },
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "@types/node": "^12.12.7",
    "@typescript-eslint/eslint-plugin": "^2.7.0",
    "commitizen": "^3.1.1",
    "eslint": "^6.0.1",
    "eslint-config-airbnb-typescript": "^4.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-import-resolver-lerna": "^1.1.0",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-jest": "^22.7.2",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-security": "^1.4.0",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "lerna": "^3.18.4",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.5.2",
    "typescript": "^3.7.2"
  }
}
